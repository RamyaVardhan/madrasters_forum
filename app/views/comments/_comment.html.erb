<div class="comment clearfix">
	<div class="content">
		<p class="comment-content"> <%= comment.comment%></p>
		<p class="comment-author"><%= comment.user.try(:email) %></p>
	</div>
	<div class="buttons">
		<%= link_to "Edit", edit_post_comment_path(comment.post,comment), class: 'btn btn-default'%>
		<%= link_to "Delete", [comment.post,comment], method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-default'%>
	</div>
</div>
